{
  "name": "lloricode/php-timezone",
  "description": "PHP Timezone",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Lloric Mayuga Garica",
      "email": "lloricode@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "composer-runtime-api": "^2.2",
    "pestphp/pest": "^2.34",
    "laravel/pint": "^1.14"
  },
  "autoload": {
    "psr-4": {
      "Lloricode\\Timezone\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Lloricode\\Timezone\\Test\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "format": "vendor/bin/pint",
    "format-dirty": "vendor/bin/pint --dirty",
    "format-dry-run": "vendor/bin/pint --test"
  }
}
